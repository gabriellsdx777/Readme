 import java.util.Scanner;

public class buscaSequencialatv {
    
    public static Scanner input = new Scanner(System.in);

    public static int buscaSequencial(int[] v, int tam, int key){

        for(int i = 0; i < tam; i+=1){

            if(v[i] == key){

                return i;

            }
            
        }
        return -1;
    }

    public static void preencherVetor(int[] v){

        for(int i = 0; i < v.length; i++){

            System.out.println("Digite o " + (i + 1) + "° número");
            v[i] = input.nextInt();

        }
    }

    public static void main(String[] args) {

        int QTD = 5;
        int[] vetor = new int[QTD];
        preencherVetor(vetor);
        
        System.out.println("Digite o número a ser buscado no vetor:");
        int key = input.nextInt();

        int posicao = buscaSequencial(vetor, vetor.length, key);

        if(posicao != -1){

            System.out.println("Vetor encontrado na posicao: " + posicao);
        }

        else{

            System.out.println("Vetor não encontrado");
        }

    }

}
